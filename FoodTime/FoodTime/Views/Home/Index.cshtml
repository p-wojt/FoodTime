@{
    ViewData["Title"] = "Home Page";
}

<section class="home">
    <header class="hero">
        <h1 class="heading-primary">food time</h1>
        <h2 class="heading-secondary">Organize <span class="span-text--green">Make</span> <span class="span-text--gray">&</span> <span class="span-text--green">Eat</span></h2>
        <div class="home-menu u-margin-top-medium">
            <a asp-area="Identity" asp-page="/Account/Register" class="home-menu__link btn btn--blue btn--animated">
