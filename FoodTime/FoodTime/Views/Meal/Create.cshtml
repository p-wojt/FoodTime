@model MealModel


<form method="post" class="form">
    <h3 class="heading-tertiary u-margin-bottom-medium u-center-text">Create Meal</h3>
    <div class="form__group">
        <label asp-for="Name" class="form__label"></label>
        <input asp-for="Name" class="form__input form__input--sized" aria-required="true"/>
        <span asp-validation-for="Name" class="span-text"></span>
    </div>
    <div class="form__group">
        <label asp-for="Day" class="form__label"></label>
        <select asp-for="Day" class="form__select" aria-required="true">
            <option class="form__option">Monday</option>
            <option class="form__option">Thuesday</option>
            <option class="form__option">Wednesday</option>
            <option class="form__option">Thursday</option>
            <option class="form__option">Friday</option>
            <option class="form__option">Saturday</option>
            <option class="form__option">Sunday</option>
        </select>
        <span asp-validation-for="Day" class="span-text"></span>
    </div>
    
    <div class="form__button">
        <button type="submit" class="btn btn--blue u-margin-top-small">Create</button>
    </div>
</form>


