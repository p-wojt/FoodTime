@model MealModel

<form method="post" asp-action="Delete"> @* Nie jest wymagane bo bierze następna metodę *@
    <input asp-for="Id" type="text" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr/>
        </div>
        @* <div asp-validation-summary="All"></div> *@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control">
        </div>
        <button type="submit" class="btn btn-danger" style="width: 150px">Update</button>
        <a asp-controller="Meal" asp-action="Index" class="btn btn-secondary" style="width: 150px">
            Back to List
        </a>
    </div>
</form>


